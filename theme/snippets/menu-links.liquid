{% comment %}
    Renders a list of menu items
    Accepts:
    - linklist: {Object} Linklist Liquid object (required)
    - wrapper_class: {String} CSS wrapper class for the navigation (optional)

    Usage:
    {% include 'site-nav', linklist: section.settings.main_linklist, wrapper_class: 'site-nav--centered' %}
{% endcomment %}
{% if theme == 'main' %}
<ul class="text-2xl xs:text-3xl SM:text-4xl md:text-5xl xl:text-7xl pl-6 xs:pl-12 md:pl-24 xl:pl-48">
  {% for link in linklists[linklist].links %}
        <li class=" pt-6 md:pt-10" {% if link.active %} class="site-nav--active"{% endif %}>
        <a href="{{ link.url }}" {% if childlink.current %} aria-current="page"{% endif %} class="pb-4 border-b-4 border-white block w-max {% if link.active %} site-nav__link--active{% endif %} hover:text-white"> 
            <span class=""> {{ link.title | escape }} </span></a>
        </li>
  {% endfor %}
</ul>
{% else %}
<ul class="pt-6 md:pt-10 md:pt-20 pl-6 xs:pl-12 md:pl-24 xl:pl-48 text-lg md:text-5xl flex">
{% for link in linklists[linklist].links %}
    <li class="mr-8 md:mr-16"><a href="{{ link.url }}" class="pb-4 border-b-4 border-white block w-max hover:text-white"> <span
                class=""> {{ link.title | escape }} </span></a></li>
{% endfor %}
</ul>
{% endif %}
