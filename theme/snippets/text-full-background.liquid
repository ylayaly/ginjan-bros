{% if data.settings.show %}
    <style>
        .text-full-background{
            background-image: url({{ data.settings.image | image_url: width: auto }});
            background-repeat: no-repeat;
        }
        @media (max-width: 1023px) {
            .text-full-background{
                background-image: url({{ data.settings.image_mobile | image_url: width: auto }});
            }
        }
    </style>
    
    <div class="xs:min-h-96 flex items-end py-5">
        <div class="relative text-full-background bg-cover bg-center w-full rounded-[38px] xs:aspect-square lg:aspect-auto">
            <div class="absolute inset-0 bg-black/20 rounded-[38px]"></div>
            <div class="h-full flex flex-col items-center justify-center lg:block relative px-4 py-10 sm:p-10 lg:p-20 xl:p-36 w-full lg:w-2/3 2xl:w-1/55 3xl:w-1/2 lg:pr-0 xl:pr-0 text-white">
                <span class="font-sofiapro text-centered text-xl md:text-4xl lg:text-xl lg:text-left">{{ data.settings.top_title }}</span>
                <h1 class="font-loto text-4xl md:text-7xl lg:text-5xl font-bold mt-8 lg:mt-4 text-centered lg:text-left">{{ data.settings.title }}</h1>
                <div class="font-loto hidden lg:block lg:text-lg mt-6 xl:mt-10">{{ data.settings.content }}</div>
                <a class="block mt-12 lg:mt-11 font-bold text-sm lg:text-xs underline uppercase" href="{{ data.settings.button_link }}">
                    {{ data.settings.button_label }}
                </a>
            </div>
        </div>
    </div>

    
    {%- endif -%}