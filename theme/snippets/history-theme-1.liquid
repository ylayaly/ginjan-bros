<section class="3xl:container">
    <div class="block lg:hidden w-full h-full flex px-6 sm:pl-12 md:pl-24 pb-2">
        <span class="font-aeonik font-bold text-4xl md:text-5xl xl:text-68 opacity-70" style="color: {{ block.settings.color }}">{{ block.settings.year }}</span>
    </div>
    <div class="flex w-full lg:min-h-200 xl:min-h-274 h-50vh h-50-vh lg:h-60vh">
        <div class="w-full relative pt-10">
            <div class="bg-cover bg-no-repeat bg-center h-full" style="background-image: url({{ block.settings.image | image_url: width: auto }});"></div>
            <div class="absolute inset-0 lg:h-1/76 opacity-bg-gb" style="background-color: {{ block.settings.color }}"></div>
            <div class="absolute inset-0 flex flex-col justify-center h-auto px-6 sm:px-12 md:px-24 xl:pr-0 xl:pl-48 3xl:pl-77 w-full lg:w-4/6">
                <h1 class="text-5xl md:text-7xl xl:text-20 mb-4 leading-none font-bold" style="color: {{ block.settings.color }}">{{ block.settings.title }}</h1>
                <h4 class="text-xl md:text-2xl lg:text-3xl xl:text-32 font-bold" style="color: {{ block.settings.color }}">{{ block.settings.subtitle }}</h4>
                <div class="text-white font-aeonik text-base md:text-lg xl:text-22 mt-10">
                    {{ block.settings.content }}
                </div>
            </div>
        </div>
        <div class="hidden lg:flex w-24 md:w-48 xl:w-64 h-full items-center justify-center">
            <span class="font-aeonik font-bold text-2xl sm:text-4xl md:text-5xl xl:text-68 opacity-70" style="color: {{ block.settings.color }}">{{ block.settings.year }}</span>
        </div>
    </div>
</section>