<section class="4xl:container relative mt-32 mb-24">
    <div class="px-10 md:px-20 ">
        <div class="border-b border-blue pb-2 md:pb-3 xl:pb-4 w-full text-blue font-bold font-sofiapro text-22 lg:text-lg 2xl:text-22">
            <h2>{{ section.settings.title_section | escape }}</h2>
        </div>
        <blog-grid class="grid grid-cols-1 lg:grid-cols-2 2xl:grid-cols-featured-post gap-5 mt-6">
            {% assign is_odd = section.blocks.size | modulo : 2 %}
            {% for block in section.blocks %}
                {% assign article = block.settings.article %}
                <article class="relative px-8 lg:px-4 2xl:px-8 rounded-2xl overflow-hidden flex items-end pt-36 3xl:pt-80 pb-24 3xl:pb-36 {% if is_odd != 0 %} lg:last:col-span-2 2xl:last:col-span-1 {% endif %}">
                    <picture class="absolute inset-0">
                        {%- if block.settings.image != blank -%}
                          <img src="{{ block.settings.image | image_url }}" alt="{{ article.title | strip_newlines }}" loading="lazy" class="w-full h-full object-cover"/>
                        {% else %}  
                          <img src="{{ article.image | image_url }}" alt="{{ article.title | strip_newlines }}" loading="lazy" class="w-full h-full object-cover"/>
                        {%- endif -%}
                    </picture>
                    <div class="relative font-loto">
                        <span class="text-xs p-1 tracking-widest font-bold top-tag-white" style="background: {{ article.metafields.post.color_top_tag }}; color: {{ article.metafields.post.text_color_top_tag }}">{{ article.metafields.post.top_tag }}</span>
                        <h3 class="text-white whitespace-break-spaces text-2xl mt-2 font-bold">{{ article.title }}</h3>
                        <div class='flex text-white mt-6 gap-6 items-start'>
                            <a class="font-semibold border-b-4 border-white pb-1 " href="{{ article.url }}">READ MORE</a>
                            <div class="flex items-center gap-2">
                                {% render 'icon-time' %}
                                <span>{{ article.metafields.custom.time }} MIN</span>
                            </div>
                        </div>
                    </div>
                </article>
            {% endfor %}
        </blog-grid>
        <div>
          {% render 'text-full-background', data : section %}
        </div>
        <a class="block btn-shop btn-shop-blue mt-16 text-white mx-auto pr-5" href="{{ section.settings.btn_link }}">
            <span class="pr-8">{{ section.settings.btn_label }}</span>
        </a>
    </div>
</section>
